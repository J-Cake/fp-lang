{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "Node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "rootDirs": ["./ast"],
        "outDir": "./build",
        "declaration": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}