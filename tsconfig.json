{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "Node",
        "lib": ["ESNext"],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "rootDirs": [
            "./parse"
        ],
        "outDir": "./build/ts",
        "declaration": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules"
    ]
}